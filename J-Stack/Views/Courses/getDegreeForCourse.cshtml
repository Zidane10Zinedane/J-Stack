@model IEnumerable<J_Stack.Models.Degree>
@{
    ViewBag.Title = "getDegreeForCourse";
}



<!DOCTYPE html>
<html>


<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title></title>
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/css/select2.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://momentjs.com/downloads/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>
<body>
    <!-- Header----------------------------------------------------------------------->
    <div class="header">
        <div class="header-left">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <span>Demo</span>
            </a>
        </div>
        <a id="toggle_btn" href="javascript:void(0);"><i class="fa fa-bars"></i></a>
        <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar"><i class="fa fa-bars"></i></a>
    </div>
    <!-------------------------------------------------------------------------------->
    <!--Sidebar------------------------------------------------------------------------>
    <div class="sidebar" id="sidebar">
        <div class="sidebar-inner slimscroll">
            <div id="sidebar-menu" class="sidebar-menu">
                <ul>
                    <li class="menu-title">Main</li>
                    <li>
                        <a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> <span>Dashboard</span></a>
                    </li>
                    <li class="submenu">
                        <a href="@Url.Action("Create", "Degrees")"><i class="fa fa-graduation-cap"></i> <span> Add Degree </span> </a>

                    </li>
                    <li class="submenu">
                        <a href="@Url.Action("Index", "Degrees")"><i class="far fa-clipboard"></i> <span> List Degree </span> </a>

                    </li>
                    <li class="submenu">
                        <a href="@Url.Action("Create", "Courses")"><i class="fa fa-graduation-cap"></i> <span> Add Course </span> </a>

                    </li>
                    <li class="submenu">
                        <a href="@Url.Action("Index", "Courses")"><i class="far fa-clipboard"></i> <span> List Course </span> </a>

                    </li>
                    <li class="submenu">
                        <a href="@Url.Action("Create", "Lectures")"><i class="fa fa-user"></i> <span> Add Lecture </span> </a>

                    </li>
                    <li class="submenu">
                        <a href="@Url.Action("Index", "Lectures")"><i class="far fa-clipboard"></i> <span> List Lecture </span> </a>

                    </li>
                    <li class="submenu">
                        <a href="@Url.Action("Create", "Students")"><i class="fa fa-user"></i> <span> Add Student </span> </a>

                    </li>
                    <li class="submenu">
                        <a href="@Url.Action("Index", "Students")"><i class="far fa-clipboard"></i> <span> List Student </span> </a>

                    </li>

                </ul>
            </div>
        </div>
    </div>
    <!---------------------------------------------------------------------------------->
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-sm-4 col-3">
                    <h4 class="page-title">List Degree</h4>
                </div>
                <div class="col-sm-8 col-9 text-right m-b-20">
                    <a href="@Url.Action("Create","Degrees")" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i>Add Degree </a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-striped custom-table">
                            <thead>

                                <tr>

                                    <th>Degree Name</th>
                                    <th>Duration in Year(s)</th>


                                    <th class="text-right">Action</th>

                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DegreeName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DurationYears)
                                    </td>

                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" href="@Url.Action("Edit", new { id = item.D_Id })"><i class="fa fa-pencil m-r-5"></i>Edit</a>
                                                @*<a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_appointment"><i class="fa fa-trash-o m-r-5"></i> Delete</a>*@

                                            </div>
                                        </div>





                                    </td>

                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="assets/js/jquery-3.2.1.min.js"></script>
    <script src="assets/js/popper.min.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
    <script src="assets/js/jquery.slimscroll.js"></script>
    <script src="assets/js/select2.min.js"></script>
    <script src="assets/js/jquery.dataTables.min.js"></script>
    <script src="assets/js/dataTables.bootstrap4.min.js"></script>
    <script src="assets/js/moment.min.js"></script>
    <script src="assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="assets/js/app.js"></script>

</body>
</html>